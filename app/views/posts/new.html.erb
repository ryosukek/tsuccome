<div>
  <h3>手持ちの写真からお題とツッコミを投稿しよう</h3>
  <%= form_for(@post) do |f| %>
    <div>
      <%= f.file_field :image %>
    </div>
    <div>
      <%= f.text_area :text, placeholder: 'ツッコミを入力', style: 'width: 30%; height: 100px;' %>
    </div>
    <div>
      <%= f.submit "投稿する" %>
    </div>
  <% end %>
</div>